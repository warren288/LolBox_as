<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.warren.lolbox.widget.TitleBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/toolmenu_shrink"
        app:left_img="@drawable/lolbox_titleview_return_default">
    </com.warren.lolbox.widget.TitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/tv_server"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/bluegreen"
            android:text="水晶之痕"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_summoner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="还在A等待"
            android:textColor="@color/bluegreen"
            android:layout_toRightOf="@id/tv_server"
            android:paddingLeft="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/img_voice"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:src="@drawable/mute_close"/>
        <ImageView
            android:id="@+id/img_viberate"
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/img_voice"
            android:src="@drawable/vibrating_open"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_shake"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_shake"/>
    <TextView
        android:id="@+id/tv_shakehint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/shake_hint"
        android:gravity="center_horizontal"
        android:textColor="@color/bluegreen"/>
</LinearLayout><!-- From: file:/E:/Personal/app/src/main/res/layout/activity_shake.xml -->