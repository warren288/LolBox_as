<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:background="@color/darkdarkblue"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/img_vs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pw_hero_vs_icon"/>


    <TextView
        android:id="@+id/tv_self_zdl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/img_vs"
        android:textColor="@android:color/white"
        android:text="4444"/>

    <TextView
        android:id="@+id/tv_enemy_zdl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_toRightOf="@id/img_vs"
        android:textColor="@android:color/white"
        android:text="5555"/>
</RelativeLayout>